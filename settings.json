{
  "workbench.settings.editor": "json",
  "editor.fontFamily": "'JetBrains Mono'",
  "workbench.colorTheme": "Min Dark",
  "workbench.iconTheme": "symbols",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.fontWeight": "700",
  "editor.lineHeight": 1.8,
  "editor.rulers": [
    80,
    120
  ],
  "explorer.compactFolders": false,
  "editor.semanticHighlighting.enabled": false,
  "breadcrumbs.enabled": false,
  "workbench.editor.labelFormat": "short",
  "workbench.statusBar.visible": false,
  "editor.renderLineHighlight": "gutter",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.smoothScrolling": true,
  "workbench.list.smoothScrolling": true,
  "terminal.integrated.smoothScrolling": true,
  "editor.cursorStyle": "block",
  "editor.cursorBlinking": "smooth",
  "window.titleBarStyle": "custom",
  "editor.scrollbar.vertical": "hidden",
  "editor.scrollbar.horizontal": "hidden",
  "window.commandCenter": false,
  "workbench.editor.enablePreview": false,
  "editor.minimap.enabled": false,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "explorer.confirmDelete": false,
  "workbench.activityBar.location": "hidden",
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "node_modules": true,
    ".vsvode": true,
    ".gitignore": true,
    "postcss.config.js": true,
    "README.md": true,
    "bun.lockb": true,
    ".eslintrc.cjs": true
  },
  
  
  "apc.electron": {
    "titleBarStyle": "hiddenInset",
    "trafficLightPosition": {
      "x": 12,
      "y": 10
    }
  },

  "apc.listRow": {
    "height": 30,
  },
  "apc.font.family": "JetBrains Mono",

  "apc.stylesheet": {
    ".titlebar-left": "display:none !important",
    ".title-label > h2": "display: none",
    ".composite": "margin-top: -15px !important",
    ".title-actions": "display: none !important",
    ".editor-actions" : "display: none",
    ".menubar" : "display: none",
    "titlebar" : "background: rgb(26, 26, 26)",
    ".titlebar-center" : "display: none !important",
    ".action-toolbar-container" : "display: none !important",
    ".window-icon" : "background: #fff; margin : 0 5px; height: 15px !important; width: 15px !important; border-radius: 50%; transition: all .2s ease;",
    ".window-icon:hover" : "transform: scale(1.2)",
    ".window-icon::before" : "display: none !important",
    ".window-controls-container": "display: flex !important; align-items: center; justify-content: end; margin-right: 10px",

    ".window-close": "background: #FB5D5F !important;",
    ".window-max-restore": "background: #F2BE44 !important;",
    ".window-minimize": "background: #3BC24D !important;",
  },
  
